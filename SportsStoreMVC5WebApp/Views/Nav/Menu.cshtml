@model IEnumerable<string>
@{ Layout = null; }

<div class="btn btn-block btn-default">@Html.ActionLink("Home", "List", "Product")</div>

@foreach (var item in Model)
{
    <div class="btn btn-block btn-default @(item == ViewBag.selectedCategory ? "selectedCategory" : null)">
        @Html.RouteLink(item, new { controller = "Product", action = "List", category = item, page =1})
    </div>
}
